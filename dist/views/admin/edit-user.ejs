<% include('../layouts/header.ejs') %>

<head>
    <!-- Add Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">

    <style>
        /* Add CSS*/
        body {
            font-family: 'Arial', sans-serif;
            margin: 20px;
            padding: 20px;
            /* background-color: #f8f9fa; */
            /* background-color: #1d4872; */
            background-image: url('/images/bgimg.jpg');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            /* height: 100vh; */
            /* display: flex; */
            align-items: center;
            justify-content: center;
        }

        h1 {
            text-align: center;
            color: #10345a;
        }

        form {
            max-width: 400px;
            margin: auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        input[type="text"],
        input[type="email"],
        input[type="radio"] {
            accent-color: #10345a;
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #ced4da;
            border-radius: 4px;
            box-sizing: border-box;
        }

        label {
            margin-right: 10px;
        }

        input[type="submit"] {
            background-color: #007bff;
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        input[type="submit"]:hover {
            background-color: #0056b3;
        }

        a {
            display: inline-block;
            margin-top: 10px;
            padding: 10px 20px;
            text-decoration: none;
            color: #fff;
            background-color: #007bff;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

        a:hover {
            background-color: #0056b3;
        }
    </style>
</head>

<body>
    <h1>Edit User</h1>

    <form action="" method="post">
        <input type="text" name="name" placeholder="Enter Name" value="<%= user.name %>" required>
        <br>
        <input type="email" name="email" placeholder="Enter Email" value="<%= user.email %>" required>
        <br>
        <input type="text" name="mno" placeholder="Enter Mobile" value="<%= user.mobile %>" required>
        <br>
        <label>Verified</label>
        <input type="radio" name="verify" value="1" <% if(user.is_verified == 1){ %> checked <% } %> style="margin-top: -28px;">
        <label>Unverified</label>
        <input type="radio" name="verify" value="0" <% if(user.is_verified == 0){ %> checked <% } %> style="margin-top: -30px;">
        <br>
        <input type="hidden" name="id" value="<%= user._id %>">
        <input type="submit" value="Update User" class="btn" style="background-color: #10345a; color: #fff;">
    </form>

    <a href="/admin/" class="btn" style="background-color: #10345a; color: #fff;">Go to Home</a>

<% include('../layouts/footer.ejs') %>
